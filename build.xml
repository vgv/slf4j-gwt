<project name="slf4j-gwt" default="package">

	<import file="common.xml"/>

	<path id="compile-classpath">
		<fileset dir="lib/jar" includes="**/*.jar"/>
	</path>

	<target name="clean">
		<delete dir="output"/>
		<delete dir="dist"/>
	</target>

	<target name="download-lib">
		<ivy-retrieve/>
	</target>

	<target name="compile" depends="download-lib">
		<java-compile
				srcdir="src/main/java"
				destdir="output/classes"
				classpathref="compile-classpath"/>
	</target>

	<target name="package" depends="compile">
		<jar jarfile="dist/slf4j-gwt.jar">
			<zipfileset dir="src/main/java"/>
			<zipfileset dir="output/classes"/>
		</jar>

		<jar basedir="src/main/java" jarfile="dist/slf4j-gwt-sources.jar"/>
	</target>

</project>